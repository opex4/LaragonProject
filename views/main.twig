{% import "macros.twig" as macros %}
{% extends "__layout.twig" %}
{% block content %}
    <div class="container">
    {% for item in menu_items %}
            <div class="container p-2 border">
                {{ macros.btn(item.title, item.url_title, true) }}
                <a class="mx-2" href="/{{ item.url_title }}/img">Картинка</a>
                <a class="mx-2" href="/{{ item.url_title }}/description">Описание</a>
            </div>
    {% endfor %}
    </div>
{% endblock %}